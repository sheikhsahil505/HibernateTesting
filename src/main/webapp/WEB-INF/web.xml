  </servlet-mapping>
  <servlet>
    <servlet-name>updateHimself</servlet-name>
    <servlet-class>com.controller.UpdateProfile</servlet-class>
  </servlet>

<servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>com.controller.Home</servlet-class>
  </servlet>

</web-app>
