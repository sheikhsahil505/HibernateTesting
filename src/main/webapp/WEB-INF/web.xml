
<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet-mapping>
    <servlet-name>SaveUser</servlet-name>
    <url-pattern>/saveUser</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SaveUser</servlet-name>
    <servlet-class>com.controller.SaveUser</servlet-class>
  </servlet>

  <filter>
    <filter-name>FormValidationFilter</filter-name>
    <filter-class>com.controller.RegisterFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FormValidationFilter</filter-name>
    <servlet-name>SaveUser</servlet-name>
  </filter-mapping>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.controller.Login</servlet-class>
  </servlet>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.controller.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <servlet-name>login</servlet-name>
  </filter-mapping>


  <servlet-mapping>
    <servlet-name>ForgetPassword</servlet-name>
    <url-pattern>/forgetPassword</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ForgetPassword</servlet-name>
    <servlet-class>com.controller.ForgetPassword</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GenerateNewPassword</servlet-name>
    <url-pattern>/generateNewPassword</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GenerateNewPassword</servlet-name>
    <servlet-class>com.controller.GenerateNewPassword</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>ViewUserViaAdmin</servlet-name>
    <url-pattern>/viewMoreUser</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewUserViaAdmin</servlet-name>
    <servlet-class>com.controller.ViewUserViaAdmin</servlet-class>
  </servlet>



<servlet-mapping>
    <servlet-name>DeleteUser</servlet-name>
    <url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteUser</servlet-name>
    <servlet-class>com.controller.DeleteUser</servlet-class>
  </servlet>

<servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
